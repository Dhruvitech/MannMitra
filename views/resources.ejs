
    <section id="resources" class="min-h-screen bg-gray-100 py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <svg class="mx-auto h-16 w-16 text-pastel-purple mb-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Mental Wellness Resources</h2>
                <p class="text-xl text-gray-600">Curated content to support your mental health journey</p>
            </div>
            
            <div class="mb-8">
                <div class="flex flex-wrap justify-center gap-4">
                    <button onclick="filterResources('all')" class="resource-filter bg-pastel-purple text-white px-6 py-2 rounded-full transition-colors">All</button>
                    <button onclick="filterResources('video')" class="resource-filter bg-gray-200 text-gray-700 hover:bg-pastel-purple hover:text-white px-6 py-2 rounded-full transition-colors">Videos</button>
                    <button onclick="filterResources('audio')" class="resource-filter bg-gray-200 text-gray-700 hover:bg-pastel-purple hover:text-white px-6 py-2 rounded-full transition-colors">Audio Guides</button>
                    <button onclick="filterResources('article')" class="resource-filter bg-gray-200 text-gray-700 hover:bg-pastel-purple hover:text-white px-6 py-2 rounded-full transition-colors">Articles</button>
                </div>
            </div>
            
            <div id="resources-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% resources.forEach(resource => { %>
                    <div class="resource-item <%= resource.type %> bg-gray-50 rounded-xl p-6 shadow-lg transform transition-transform hover:scale-105">
                        <% if (resource.type === 'video') { %>
                            <div class="aspect-w-16 aspect-h-9 mb-4 rounded-lg overflow-hidden">
                                <iframe src="<%= resource.url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="w-full h-full"></iframe>
                            </div>
                        <% } else if (resource.type === 'audio') { %>
                            <div class="mb-4">
                                <audio controls class="w-full">
                                    <source src="<%= resource.url %>" type="audio/mpeg">
                                    Your browser does not support the audio element.
                                </audio>
                            </div>
                        <% } else { %>
                            <div class="bg-blue-100 rounded-lg p-4 mb-4 text-center">
                                <svg class="h-10 w-10 text-blue-600 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                </svg>
                            </div>
                        <% } %>

                        <h3 class="text-xl font-semibold text-gray-800 mb-2">
                            <%= resource.title %>
                        </h3>
                        <p class="text-gray-600 mb-4">
                            <%= resource.description %>
                        </p>
                        
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500">
                                <%= resource.duration %>
                            </span>
                            <a href="<%= resource.url %>" target="_blank" class="bg-calm-blue hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
                                <%= resource.type === 'video' ? 'Watch' : (resource.type === 'audio' ? 'Listen' : 'Read') %>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    