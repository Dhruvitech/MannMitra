<div class="container mx-auto p-8">
    <h2 class="text-3xl font-bold mb-6 text-center">Your Profile</h2>

    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h3 class="text-2xl font-semibold mb-4">Personal Information</h3>
        <p class="text-gray-600 mb-2">
            <strong>Username:</strong> <%= user.username %>
        </p>
        <p class="text-gray-600 mb-2">
            <strong>Email:</strong> <%= user.email %>
        </p>
    </div>

    <h3 class="text-2xl font-semibold mb-4">Your Booked Sessions</h3>

    <% if (bookings.length > 0) { %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <% bookings.forEach(booking => { %>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    
                    <p class="text-gray-600 mb-2">
                        <strong>Counselor:</strong> 
                        <% if (booking.counselorId) { %>
                            <%= booking.counselorId.name %>
                        <% } else { %>
                            Not assigned
                        <% } %>
                    </p>
                    <p class="text-gray-600 mb-2">
                        <strong>Specialization:</strong> 
                        <% if (booking.counselorId) { %>
                            <%= booking.counselorId.specialization %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </p>
                    <p class="text-gray-600 mb-2">
                        <strong>Date:</strong> <%= booking.date.toLocaleDateString() %>
                    </p>
                    <p class="text-gray-600 mb-2">
                        <strong>Time:</strong> <%= booking.date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                    </p>
                    <p class="text-gray-600">
                        <strong>Status:</strong> <%= booking.status %>
                    </p>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="text-center text-gray-500">You have no upcoming booked sessions.</p>
    <% } %>
</div>